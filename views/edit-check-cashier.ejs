<%- include("./partials/navbar.ejs"); %>

  <div id="wrapper">
    <%- include("./partials/sidebar.ejs"); %>

    <div id="content-wrapper">
      <div class="container-fluid">
        <!-- Breadcrumbs -->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Dashboard</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/emission">Checks</a>
          </li>
          <li class="breadcrumb-item active">Edit Check</li>
        </ol>

        <!-- Page Content -->
        <h1 class="mt-4">Edit Check</h1>
        <div class="card mb-4">
          <div class="card-header">
            <i class="fas fa-pencil-alt mr-1"></i>
            Edit Check
          </div>
          <div class="card-body">
            <form action="/checks/update/cashier/<%= check.num %>" method="POST">
              <div class="form-group">
                <label for="entryDate">Entry Date:</label>
                <input type="date" class="form-control" id="entryDate" name="entryDate" value="<%= check.entrydate ? new Date(check.entrydate).toISOString().split('T')[0] : '' %> " >
              </div>
              <div class="form-group">
                <label for="issueDate">Issue Date:</label>
                <input type="date" class="form-control" id="issueDate" name="issueDate" value="<%= check.issueDate ? new Date(check.issueDate).toISOString().split('T')[0] : '' %> " >
              </div>
              <div class="form-group">
                <label for="type">Type:</label>
                <select class="form-control" id="type" name="type"  >
                  <option value="" >Select Type</option>
                  <option value="F" <%= check.type === 'F' ? 'selected' : '' %>>Supplier</option>
                  <option value="P" <%= check.type === 'P' ? 'selected' : '' %>>Personnel</option>
                  <option value="I" <%= check.type === 'I' ? 'selected' : '' %>>Intern</option>
                </select>
              </div>
              <input type="hidden" name="updatedBy" value="<%= req.user.iduser %>">
              <button type="submit" class="btn btn-primary">Update Check</button>
              <a href="/emission" class="btn btn-secondary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <%- include("./partials/footer.ejs"); %>
    </div>
    <!-- /.content-wrapper -->
  </div>
  <!-- /#wrapper -->
